# Console appender definition json: {"appender", "stream"}
log-console-appender = {"appender":"stderr","stream":"std_error"}

# File appender definition json:  {"appender", "file"}
log-file-appender = {"appender":"p2p","file":"logs/p2p/p2p.log"}

# Logger definition json: {"name", "level", "appender"}
log-logger = {"name":"default","level":"info","appender":"stderr"}
log-logger = {"name":"p2p","level":"info","appender":"stderr"}

webserver-ws-endpoint = 0.0.0.0:8090
p2p-endpoint = 0.0.0.0:2001

p2p-seed-node = 23.97.210.36:2001               # kepler.westeurope.cloudapp.azure.com
p2p-seed-node = 23.97.135.184:2001              # trappist.westeurope.cloudapp.azure.com
p2p-seed-node = 65.52.156.67:2001               # ross.westeurope.cloudapp.azure.com
p2p-seed-node = 137.117.165.158:2001            # centauri.westeurope.cloudapp.azure.com

shared-file-size = 2G

# Plugin(s) to enable, may be specified multiple times
plugin = webserver p2p json_rpc witness

plugin = database_api condenser_api 

